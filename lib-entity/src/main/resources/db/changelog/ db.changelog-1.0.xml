<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	<changeSet author="runa" id="changelog-1.0">
		<createTable tableName="book">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="isbn" type="varchar(13)">
				<constraints nullable="false" />
			</column>
			<column name="quantity" type="int">
				<constraints nullable="false" />
			</column>
			<column name="rating" type="double">
			</column>
			<column name="department" type="Enum">
				<constraints nullable="false" />
			</column>
			<column name="is_occupied" type="Enum">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="changelog-1.1">
		<createTable tableName="book_details">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="author" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="discription" type="varchar(200)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	
	
	<changeSet id="runa" author="changelog-1.2">
	<addForeignKeyConstraint constraintName="fk_id" 
	referencedTableName="book_details" referencedColumnNames="id"
	baseColumnNames="book" baseTableName="id" />
		
	</changeSet>
	
	
	<changeSet author="runa" id="changelog-1.2">
		<createTable tableName="feedback">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="book_id" type="long">
				<constraints nullable="false" />
			</column>
			<column name="user_id" type="long">
				<constraints nullable="false" />
			</column>
			<column name="rating" type="enum">
				<constraints nullable="false" />
			</column>
			<column name="user_name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="comment" type="varchar(200)">
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="changelog-1.2">
		<createTable tableName="notification">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="notification_message" type="varchar(200)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="changelog-1.2">
		<createTable tableName="order">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="user_id" type="long">
				<constraints nullable="false" />
			</column>
			<column name="book_id" type="long">
				<constraints nullable="false" />
			</column>
			<column name="notification_id" type="long">
				<constraints nullable="false" />
			</column>
			<column name="order_date" type="date">
				<constraints nullable="false" />
			</column>
			<column name="due_date" type="date">
				<constraints nullable="false" />
			</column>
			<column name="is_finished" type="boolean">
			</column>
			<column name="prolongation" type="boolean">
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="changelog-1.2">
		<createTable tableName="role">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="name" type="varchar(20)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet author="runa" id="changelog-1.2">
		<createTable tableName="user">
			<column name="id" type="long">
				<constraints nullable="false" primaryKey="true"
					unique="true" />
			</column>
			<column name="email" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="password" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(20)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog> 